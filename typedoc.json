{
  "entryPoints": [
    "src/index.ts",
    "src/**/*.ts",
    "components/**/*.ts"
  ],
  "out": "docs",
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "excludeExternals": true,
  "includeVersion": true,
  "excludeNotDocumented": true,
  "hideGenerator": false,
  "categorizeByGroup": true,
  "defaultCategory": "General",
  "categoryOrder": [
    "Components",
    "Hooks",
    "Utilities",
    "Other"
  ],
  "disableSources": false,
  "sort": ["source-order"],
  "commentStyle": "jsdoc",
  "validation": {
    "notExported": true,
    "invalidLink": true,
    "notDocumented": true
  },
  "theme": "hierarchy",
  "darkHighlightTheme": "dark-plus",
  "lightHighlightTheme": "light-plus",
  "sourceLinkTemplate": "https://github.com/username/repository/blob/{gitRevision}/{file}#L{line}",
  "plugin": [
    "typedoc-plugin-inline-sources",
    "typedoc-plugin-merge-modules",
    "typedoc-theme-hierarchy"
  ]
}
