{
  "entryPoints": ["src/**/*.ts"],
  "out": "docs",
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "excludeExternals": true,
  "includeVersion": true,
  "excludeNotDocumented": true,
  "hideGenerator": true,
  "categorizeByGroup": true,
  "defaultCategory": "General",
  "categoryOrder": [
    "Components",
    "Hooks",
    "Utilities",
    "Other"
  ],
  "disableSources": true,
  "sort": ["source-order"],
  "commentStyle": "jsdoc",
  "validation": {
    "notExported": false,
    "invalidLink": false,
    "notDocumented": false
  },
  "theme": "hierarchy",
  "darkHighlightTheme": "dark-plus",
  "lightHighlightTheme": "light-plus",
  "sourceLinkTemplate": "https://github.com/username/repository/blob/{gitRevision}/{file}#L{line}",
  "plugin": [
    "typedoc-plugin-inline-sources",
    "typedoc-plugin-merge-modules",
    "typedoc-theme-hierarchy"
  ]
}
